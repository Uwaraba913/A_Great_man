<div class="container">
  <div class="row">
    <%= form_with model: @contact, local: true do |f| %>
    <div class="contact-title">
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title %>
    </div>
    <div class="contact-content">
      <%= f.label :content, "お問い合わせ内容" %>
      <%= f.text_area :content %>
      <%= f.submit "送信", data: { confirm: "この内容でよろしいですか？"} %>
    </div>
    <% end %>
  </div>
</div>