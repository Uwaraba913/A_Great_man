<div class="container">
  <%= form_with model:@quote, local: true do |f| %>
    <div class="quote-input-area">
      <div class="text-center">
        <%= attachment_image_tag @quote, :person_image, :fill, 150, 150, fallback: "no_image.png", size: "150x150", id: "preview" %><br>
        <%= f.attachment_field :person_image %>
      </div>
      <div class="mt-3">
        <%= f.collection_select :category_id, @categories, :id, :name %><br>
        <%= f.label :person_name, "発言者名 (20文字以内)" %><br>
        <%= f.text_field :person_name, class: "quote-input-form" %><br>
        <%= f.label :content, "名（迷）言 (100文字以内)" %><br>
        <%= f.text_area :content, class: "quote-input-form" %><br>
        <%= f.hidden_field :end_user_id, value: current_end_user.id %>
        <%= f.submit "投稿", class: "btn btn-light" %><br>
      </div>
    </div>
  <% end %>
</div>