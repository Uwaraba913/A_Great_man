<div class="container">
  <%= link_to  "GOOD多い順", quotes_path(evaluation_ranking: 'good') %>
  <div class="row row-cols-lg-3 row-cols-md-2">
    <% @quotes.each do |quote| %>
      <div class="col">
        <div class="person-quote fly shadow">
            <%= link_to quote_path(quote.id) do %>
              <div class="person-profile d-flex flex-row">
                <div>
                  <%= attachment_image_tag quote.person_profile, :image, fallback: "no_image.png", size: "60x60" %>
                </div>
                <div>
                  <%= quote.person_profile.name %><br>
                  <% if quote.category.name == "ポジティブ" %>
                    <span class="positive-icon"><%= quote.category.name %></span>
                  <% else %>
                    <span class="negative-icon"><%= quote.category.name %></span>
                  <% end %>
                  <%= l quote.created_at %>
                </div>
              </div>
              <div class="person-content">
                <%= quote.content %>
              </div>
            <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>