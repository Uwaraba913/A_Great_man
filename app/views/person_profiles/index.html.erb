<div class="container">
  <div class="row">
    <div class="col d-flex justify-content-center">
      <% @persons.each do |person| %>
        <div class="person-index bg-light color-white fly shadow mx-auto">
          <div class="d-flex flex-row align-items-center">
            <%= link_to person_profile_path(person.id) do %>
              <%= attachment_image_tag person, :image, fallback: "no_image.png", size: "80x80" %>
              <span class="h4"><%= person.name %></span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>