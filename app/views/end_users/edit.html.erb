<div class="container">
  <%= form_with model:@end_user, local: true do |f| %>
  <div class="quote-input-area">
    <h3 class="text-center">~ ユーザー情報編集 ~</h3>
    <div class="text-center bg-white pt-2 pb-2">
      <%= attachment_image_tag @end_user, :image, fallback: "no_image.png", size: "150x150", id: "preview" %><br>
      <%= f.attachment_field :image %>
    </div>
    <div class="mt-3">
      <% if flash[:error] != nil %>
        <% flash[:error].each do |message| %>
          <font color="red"><%= message %></font>
        <% end %>
      <% end %>
      <div class="quote-input-form">
        ユーザーネーム (20文字以内)
        <%= f.text_field :name, class: "quote-form" %>
      </div>
      <div class="quote-input-form">
        メールアドレス
        <%= f.text_field :email, class: "quote-form" %>
      </div>
      <div class="quote-input-form">
        自己紹介文 (100文字以内)
        <%= f.text_area :introduction, class: "quote-form" %>
      </div>
      <div class="text-center">
        <%= f.submit "情報を更新", class: "btn btn-success", style: "width: 40%;" %>
        <span class="pl-5"><%= link_to "退会する", withdrawal_path(@end_user.id), class: "btn btn-danger", style: "width: 30%;" %></span>
      </div>
    </div>
  </div>
  <% end %>
</div>