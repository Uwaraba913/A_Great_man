<div class="container">
  <div class="acount">
    <h2>ログイン</h2>
    <font color="red">
      <p class="alert"><%= alert %></p>
    </font>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-field" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-field" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "次回から入力を省略する" %>
        </div>
      <% end %>

      <div class="actions mb-3">
        <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    まだアカウントを作成していない方は
    <%= render "end_users/shared/links" %>
  </div>
</div>