      <div class="col-la-4 text-center">
        <%= attachment_image_tag @person, :image, :fill, 150, 150, fallback: "no_image.png", size:'150x150' %>
        <span class="h3"><%= @person.name %></span>
        <%= link_to "編集", edit_admins_person_profile_path(@person.id), class: "btn btn-success" %>
